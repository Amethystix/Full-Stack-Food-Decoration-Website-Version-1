<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
   		<meta http-equiv="X-UA-Compatible" content="IE=edge">
    	<meta name="viewport" content="width=device-width, initial-scale=1">
      <script src = "js/jquery-3.2.1.min.js"></script>
      <script src="https://apis.google.com/js/platform.js" async defer></script>
      <script>
        function logOutAlert(){
          alert("You've been logged out!");
        }
      </script>
      {{#each p5 as |p|}}
        <script src = "js/{{p}}"></script>
      {{/each}}
      {{#if myGal}}
      <script src="js/deleteButton.js"></script>
      {{/if}}
      <meta name="google-signin-client_id" content="259868719807-b78pc296uksbcf4so63k8dsvfbknt92t.apps.googleusercontent.com">
		<title>FoodFace Industries</title>
		<link href="css/bootstrap.min.css" rel="stylesheet">
		<script src="js/bootstrap.min.js"></script>
		<link rel="stylesheet" href="css/base.css" type="text/css">
	</head>

	<body>
	<nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="bcontainer">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Home</a>
          <a class="navbar-brand" href="/gallery">Gallery</a>
          {{#if user}}
          <a class="navbar-brand" href="/createafruit">Create</a>
          {{/if}}
          <a class="navbar-brand" href="/testimonials">Testimonials</a>
        </div>
        <div class = "bcontainer right">
          {{#if user}}
            <a class = "navbar-brand" href="/mygallery">My Gallery</a>
            <span class = "navbar-brand" href="#">Hi, {{user.displayName}}</span>
            <a class = "navbar-brand" href="/logout" onclick="logOutAlert();">Log out</a>
          {{else}}
            <a class = "navbar-brand" href="/login">Log in</a>
          {{/if}}
        </div>
        <div id="navbar" class="navbar-collapse collapse">
        </div><!--/.navbar-collapse -->
      </div>
    </nav>
		<div class = "jumbotron head">
			<h1>FoodFace Industries</h1>
      {{#if message}}
			 <h3>{{message}}</h3>
      {{/if}}
		</div>
		<div class = "container main">
		{{{body}}}
		</div>
		<hr>
		<footer>
        <p>&copy; 2017 FoodFace Industries</p>
      </footer>
	</body>
</html>